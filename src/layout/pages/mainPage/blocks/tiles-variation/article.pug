article.tile_article(
  v-if="tile.type === 'article' || tile.type === 'sponsoredArticle' ||tile.type === 'press'"
  )
  .tile-article_label(
    v-if="tile.tileTitle"
    ) {{tile.tileTitle}}
  .tile-article_label(
    v-if="!tile.tileTitle"
    ) {{ (tile.isSponsored || tile.type === 'sponsoredArticle' ? 'Sponsored House Tips' : '') + (tile.type === 'press' ? 'Media' : '') + (!tile.isSponsored && !tile.tileTitle && tile.type === 'article' ? 'House Tips' : '') }}

  router-link.tile-article_link(to="/some-link")
    img.tile-article_img(:src="tile.thumbnail")

  .tile-article_body
    .tile-article_info
      .tile-article_publish
        time {{tile.date}}
      ul.tile-article_meta-list
        li
          | {{ tile.viewsCount}}&nbsp;views
        li
          | {{ tile.commentsCount}}&nbsp;comments

    h3.tile-article_title
      router-link(to="/some-link") {{ tile.title }}

    p.tile-article_tagline() {{ tile.description }}
