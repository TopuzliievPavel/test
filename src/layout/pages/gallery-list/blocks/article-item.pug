.gallery-item
  img.gallery-item_picture(
    :src="item.urls.small || 'https://cdn3.housetipster.com/empty.jpg'"
  )
    //-router-link.article-item_hover-link(to="/some-link")

  .gallery-item_details
    .gallery-item_details-body
      .gallery-item_title Autor:
        | &nbsp;
        span.h3 {{ item.user.name }}
        //-router-link(:to='#')
      //-.gallery-item_views-details
        ul.article-item_counters-list
          li.counter-item
            i(aria-hidden="true").fa.fa-thumbs-up
            | &nbsp;
            | {{ item.likes }}
          //li.counter-item
          //  i(aria-hidden="true").fa.fa-eye
          //  | &nbsp;
          //  | {{ item.viewsCount }}
          //li.counter-item
          //  i(aria-hidden="true").fa.fa-comment
          //  | &nbsp;
          //  | {{ item.commentsCount }}



      //.article-item_content(v-if="item.tagLine")
        p {{ item.user.bio }}

    //-footer.article-item_details-footer
      ul.vr-card_components-list
        li
          .vr_component-item
            i(aria-hidden="true").fa.fa-shopping-basket
            | &nbsp;
            | {{ item.componentsCount }}
            | &nbsp;
            span.item-name components
        li
          .vr_component-item
            i(aria-hidden="true").fa.fa-user
            | &nbsp;
            | {{ item.vendorsCount }}
            | &nbsp;
            span.item-name vendors
      .show-for-album.features-list_holder
        ul.vr-card_features-list
          li(:class="{'disabled': !room.features.human}")
            i(aria-hidden="true").ht.chick
          li(:class="{'disabled': !room.features.panorama}")
            i(aria-hidden="true").ht.vr-rotate
          li(:class="{'disabled': !room.features.video}")
            i(aria-hidden="true").ht.vr-play
          li(:class="{'disabled': !room.features.virtualRoom}")
            i(aria-hidden="true").ht.vr-face
          li(:class="{'disabled': !room.features.labels}")
            i(aria-hidden="true").ht.vr-label
